---
import ThemeProvider from '@/components/ThemeProvider.astro';
import ToTopButton from '@/components/ToTopButton.astro';
import Footer from '@/components/layout/Footer.astro';
import Head from '@/components/layout/Head.astro';
import HeaderBlog from '@/components/layout/HeaderBlog.astro';
import { siteConfig } from '@/site.config';

const {
	meta: { articleDate, description = siteConfig.description, ogImage, title }
} = Astro.props;
---

<html lang={siteConfig.lang} class="h-full">
	<Head articleDate={articleDate} description={description} ogImage={ogImage} title={title} />

	<body class="flex h-full justify-center bg-primary">
		<ThemeProvider />
		<main
			class="flex w-screen flex-col items-center px-5 pt-5 font-satoshi leading-relaxed text-secondary-foreground md:px-0 lg:max-w-7xl"
		>
			<HeaderBlog />
			<div class="mt-5 w-full p-5 md:mt-[5.5rem]">
				<slot />
			</div>
			<ToTopButton />
			<Footer />
		</main>
	</body>
</html>
