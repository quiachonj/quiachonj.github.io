---
import { cn } from '@/utils';

const {
	as: Tag = 'div',
	class: className = ' border border-border px-5 py-3',
	href,
	schoolName,
	degreeType,
	fieldOfStudy,
	location,
	startDate,
	endDate
} = Astro.props;
---

<Tag
	class={cn(className, 'relative rounded-2xl', href && 'transition-all hover:shadow-sm')}
	href={href}
	target="_blank"
>
	<div class="flex flex-col gap-y-1.5">
		{
			schoolName || degreeType || fieldOfStudy || startDate || endDate ? (
				<>
					<div class="flex flex-col gap-y-0.5" />
					<h1 class="text-lg font-medium text-secondary-foreground">
						{degreeType} in {fieldOfStudy}
					</h1>
					<h2 class="text-muted-foreground">
						{schoolName} - {location}
					</h2>
					<h2 class="text-sm text-accent-300">
						{startDate} - {endDate}
					</h2>
				</>
			) : null
		}
		<slot />
	</div>
</Tag>
